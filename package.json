{
  "name": "node-app-template",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "prebuild": "rimraf build",
    "build:bundle": "node scripts/build.js",
    "prebuild:bundle": "yarn build  && node scripts/rename.js",
    "postbuild:bundle": "rimraf build1",
    "start": "node build/index.js",
    "prestart": "yarn build",
    "dev": "tsx --watch src/index.ts",
    "dev:debug": "tsx --inspect --watch src/index.ts",
    "format": "prettier . --write --ignore-path .gitignore && git update-index --again",
    "lint": "eslint . --config .eslintrc.build.json --ext .ts,.tsx --fix --ignore-path .gitignore",
    "test": "vitest --reporter=verbose",
    "test:ci": "vitest run --reporter=verbose",
    "test:coverage": "vitest --watch=false --silent --coverage --reporter=verbose",
    "prepare": "husky install",
    "dbPush": "env-cmd drizzle-kit push:pg --config=src/database/drizzleConfig.ts",
    "studio": "env-cmd drizzle-kit studio --config=src/database/drizzleConfig.ts"
  },
  "keywords": [],
  "author": "Marcus Hellams",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/node": "^18.7.8",
    "@types/pg": "^8.10.2",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "@vitest/coverage-c8": "^0.22.1",
    "drizzle-kit": "^0.19.13",
    "env-cmd": "^10.1.0",
    "esbuild": "^0.15.5",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.4.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-destructure-keys": "^1.4.0",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "tsconfig-paths": "^4.1.0",
    "tsx": "^3.12.7",
    "typescript": "^4.7.4",
    "vite": "^3.0.9",
    "vitest": "^0.22.1"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.28.6",
    "pg": "^8.11.3"
  }
}
